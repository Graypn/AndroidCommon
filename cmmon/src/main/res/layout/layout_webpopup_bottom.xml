<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_webpopup_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_webpopup_btn_nomal"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_webpopup_btn"
        android:scaleType="center"
        android:src="@mipmap/ic_webpopup_back_unenable" />

    <ImageView
        android:id="@+id/btn_refresh"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_webpopup_btn"
        android:scaleType="center"
        android:src="@mipmap/ic_webpopup_refresh" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_webpopup_btn"
        android:scaleType="center"
        android:src="@mipmap/ic_webpopup_close" />
</LinearLayout>
   